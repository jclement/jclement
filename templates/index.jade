extends layout

block header

block content
  div.jumbotron.main-header.hidden-xs.hidden-sm
    a(href="contact/jclement-qr.png")
      img(src="contact/jclement-qr.png", width="150px" height="150px").pull-right
    h1= locals.name
    p= locals.description

  div.row
    div.col-md-6
      - var articles = env.helpers.getArticles(contents);
      h3 Articles:
      ul
        each article in articles
          li
            a(href=article.url)= article.title 
            = moment.utc(article.date).format(' (DD. MMMM YYYY)')
    div.col-md-6
      h3 Projects:
