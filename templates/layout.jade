doctype html
block vars
  - var bodyclass = null;
html(lang='en')
  head
    block head
      meta(charset='utf-8')
      meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
      meta(name='viewport', content='width=device-width, initial-scale=1')
      title
        block title
          = locals.name
      link(rel='alternate', href=locals.url+'/feed.xml', type='application/rss+xml', title=locals.description)
      link(rel='stylesheet', href='/lib/bootstrap/css/bootstrap.min.css')
      link(rel='stylesheet', href='/lib/font-awesome/css/font-awesome.min.css')
      link(rel='stylesheet', href='/css/main.css')
  body(class=bodyclass)
    <!--sphider_noindex-->

    <!-- Page Header -->
    div.navbar.navbar-inverse.navbar-fixed-top(role='navigation')
      div.container
        div.navbar-header
          button.navbar-toggle.collapsed(type="button", data-toggle="collapse", data-target=".navbar-collapse", aria-expanded="false", aria-controls="navbar")
            span.sr-only Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.navbar-brand(href="/") jclement.ca
        div.collapse.navbar-collapse
          ul.nav.navbar-nav
            li
              a(href="/") Home
            li
              a(href="https://www.flickr.com/photos/jeffreyclement/")
                | Photos
            li
              a(href="/contact/") Contact
          form.navbar-form.navbar-right(action="/sphider/search.php", method="get", role="search")
            input(type="hidden", name="search", value="1")
            div.form-group
              input(type="text", name="query", class="form-control", placeholder="Search")

    <!--/sphider_noindex-->
    div.container
      div.header
        block header
          div.page-header
            h1
              a(href=locals.url)= locals.name
              small= locals.description
      div#content
        block content
          h2 Placeholder
        if page.metadata.comments
          div#disqus_thread.comment-box
          script(type="text/javascript").
            var disqus_shortname = 'jclement';
            (function() {
            var dsq = document.createElement('script'); dsq.type = 'text/javascript'; dsq.async = true;
            dsq.src = '//' + disqus_shortname + '.disqus.com/embed.js';
            (document.getElementsByTagName('head')[0] || document.getElementsByTagName('body')[0]).appendChild(dsq);
            })();
          noscript.
            Please enable JavaScript to view the <a href="http://disqus.com/?ref_noscript">comments powered by Disqus.</a>
      <!--sphider_noindex-->

    div.container

    <a href="#" class="back-to-top"><i class="fa fa-2x fa-chevron-circle-up"></i></a>

    <!-- Page Footer -->
    div.container
      div.footer
        block footer
          section.copy
            p
              | &copy; #{ new Date().getFullYear() } &nbsp;
              a(href="/contact/") #{ locals.owner }
              | &nbsp;&middot;&nbsp;
              a(href="bitcoin:19zFMzDSmhAbSPDbLKgok8krvkL52G3X3J",data-toggle="tooltip",title="bitcoin")
                i.fa.fa-bitcoin
              | &nbsp;&middot;&nbsp;
              a(href="#",data-toggle="tooltip",title="e-mail").mail-link
                i.fa.fa-envelope
              | &nbsp;&middot;&nbsp;
              a(href="https://keybase.io/jsc",data-toggle="tooltip",title="keybase / gpg")
                i.fa.fa-key
              | &nbsp;&middot;&nbsp;
              a(href="https://twitter.com/charsplat",data-toggle="tooltip",title="twitter")
                i.fa.fa-twitter
              | &nbsp;&middot;&nbsp;
              a(href="https://github.com/jclement",data-toggle="tooltip",title="github")
                i.fa.fa-github
              | &nbsp;&middot;&nbsp;
              a(href="http://www.linkedin.com/profile/view?id=6394933",data-toggle="tooltip",title="linkedin")
                i.fa.fa-linkedin
              | &nbsp;&middot;&nbsp;
              a(href="https://www.flickr.com/photos/jeffreyclement/",data-toggle="tooltip",title="flickr")
                i.fa.fa-flickr
              | &nbsp;&middot;&nbsp;
              a(href="/feed.xml",data-toggle="tooltip",title="rss feed")
                i.fa.fa-rss

    <!-- Javascript Dependencies -->
    script(src="/lib/jquery/jquery-1.11.2.min.js")
    script(src="/lib/bootstrap/js/bootstrap.min.js")
    script.
      $(function() {
        var addr = "", a = [ 106, 115, 99, 64, 110, 100, 100, 110, 46, 110, 101, 116 ];
        for(var i=0; i< a.length; i++) {addr = addr + String.fromCharCode(a[i]);}
        $(".mail-addr").text(addr);
        $(".mail-link").attr("href", "mailto:" + addr);
        $('[data-toggle="tooltip"]').tooltip();

        var offset = 220;
        var duration = 500;

        jQuery(window).scroll(function() {
          if (jQuery(this).scrollTop() > offset) {
            jQuery('.back-to-top').fadeIn(duration);
          } else {
            jQuery('.back-to-top').fadeOut(duration);
          }
        });

        jQuery('.back-to-top').click(function(event) {
          event.preventDefault();
          jQuery('html, body').animate({scrollTop: 0}, duration);
          return false;
        });
      });
  <!--/sphider_noindex-->

