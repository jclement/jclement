doctype html
block vars
  - var bodyclass = null;
html(lang='en')
  head
    block head
      meta(charset='utf-8')
      meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
      meta(name='viewport', content='width=device-width, initial-scale=1')
      title
        block title
          = locals.name
      link(rel='alternate', href=locals.url+'/feed.xml', type='application/rss+xml', title=locals.description)
      link(rel='stylesheet', href='/lib/bootstrap/css/bootstrap.min.css')
      link(rel='stylesheet', href='/lib/font-awesome/css/font-awesome.min.css')
      link(rel='stylesheet', href='/css/main.css')
  body(class=bodyclass)

    <!-- Page Header -->
    div.navbar.navbar-inverse.navbar-fixed-top(role='navigation')
      div.container
        div.navbar-header
          button.navbar-toggle.collapsed(type="button", data-toggle="collapse", data-target=".navbar-collapse", aria-expanded="false", aria-controls="navbar")
            span.sr-only Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.navbar-brand(href="/") jclement.ca
        div.collapse.navbar-collapse
          ul.nav.navbar-nav
            li
              a(href="/") Home
            li
              a(href="https://www.flickr.com/photos/jeffreyclement/") 
                | Photos
            li
              a(href="/contact/") Contact
          form.navbar-form.navbar-right(action="https://duckduckgo.com/", method="get", role="search")
            input(type="hidden", name="sites", value="jclement.ca")
            div.form-group
              input(type="text", name="q", class="form-control", placeholder="Search DuckDuckGo")

    div.container
      div.header
        block header
          div.page-header
            h1
              a(href=locals.url)= locals.name
              small= locals.description
      div#content
        block content
          h2 Placeholder

    div.container
      

    <!-- Page Footer -->
    div.container
      div.footer
        block footer
          section.copy
            p &copy; #{ new Date().getFullYear() } #{ locals.owner } 

    <!-- Javascript Dependencies -->
    script(src="/lib/jquery/jquery-1.11.2.min.js")
    script(src="/lib/bootstrap/js/bootstrap.min.js")
