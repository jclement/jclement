
extends layout

block append vars
  - bodyclass = 'article-detail'

block prepend title
  | #{ page.title + " - "}

block header
  if page.metadata.draft
    p.alert.alert-warning 
      b WARNING:
      | &nbsp; This article is a draft and is not currently complete.
  div.page-header
    h1= page.title
      
block content
  article.article
    section.content!= typogr(page.html).typogrify()
